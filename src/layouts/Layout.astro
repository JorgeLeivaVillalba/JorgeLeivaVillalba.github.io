---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string; // ruta relativa en /public o URL absoluta
}

const {
  title = "CV - Jorge Leiva",
  description = "CV de Jorge Leiva: desarrollo, hardware, sistemas y dise√±o.",
  image = "/og-image.jpg",
} = Astro.props;

const canonical = Astro.site ? new URL(Astro.url.pathname, Astro.site).toString() : undefined;
const ogImageUrl = Astro.site ? new URL(image, Astro.site).toString() : image;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <meta name="description" content={description} />
    <meta name="theme-color" content="#2b2741" />
    {canonical && <link rel="canonical" href={canonical} />}

    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:url" content={canonical ?? Astro.url.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:alt" content={title} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
